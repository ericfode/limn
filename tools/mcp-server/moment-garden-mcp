#!/usr/bin/env bash
## Moment Garden MCP Server Launcher
## =========================================================
## gar mcp | sta run | mul usr
## *Garden MCP. State running. Multiple users.*

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
MCP_DIR="$SCRIPT_DIR/moment-garden"

# Ensure state directory exists
mkdir -p .beads/moment-garden

# Launch SWI-Prolog MCP server
exec swipl "$MCP_DIR/mcp-server.pl"
